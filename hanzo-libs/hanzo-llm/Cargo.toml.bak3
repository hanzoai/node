[package]
name = "hanzo_llm"
version.
edition.
authors.

[dependencies]
# Core dependencies
serde = { version = "1.0.219", features = ['derive'] }
serde_json = "1.0.117"
tokio = { version = "1.36", features = ['rt', 'rt-multi-thread', 'macros', 'fs', 'io-util', 'net', 'sync', 'time'] }
async-trait = "0.1.81"
anyhow = "1.0.86"
thiserror = "2.0"
tracing = "0.1.40"

# Math and ML
nalgebra = "0.33"
ndarray = "0.16"
statrs = "0.17"
rand = "0.8.5"
rand_distr = "0.4"
num-traits = "0.2"

# Database and storage
rusqlite = "0.31.0"
r2d2 = {  }
r2d2_sqlite = {  }
dashmap = "6.0"
chrono = { version = "0.4", features = ['serde'] }
bincode = "1.3.3"

# Internal dependencies
hanzo_message_primitives = "1.1.10"
hanzo_sqlite = {  }
hanzo_embedding = {  }

# For BitDelta quantization
bitvec = { version = "1.0", features = ["serde"] }
half = { version = "2.4", features = ["serde"] }

# For Hamiltonian dynamics
ode_solvers = "0.3"

[dev-dependencies]
tokio-test = "0.4"
criterion = "0.5"
proptest = {  }
tempfile = "3.8"

